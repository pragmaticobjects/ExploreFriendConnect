@section JavaScript {
    <!-- Load the Google AJAX API Loader -->
    <script type="text/javascript" src="http://www.google.com/jsapi"></script>
        
    <!-- Load the Google Friend Connect javascript library. -->
    <script type="text/javascript">
        google.load('friendconnect', '@ExploreFriendConnect.Conf.ApplicationConfiguration.FriendConnectLibVersion');
    </script>
    
    <script src="@Url.Content("~/Scripts/App/json2.js")" type="text/javascript"></script>    
    <script src="@Url.Content("~/Scripts/App/chowdown.js")" type="text/javascript"></script>    
   
    <!-- 
    <link rel="stylesheet" type="text/css" href="css/base.css"/>
    <link rel="stylesheet" type="text/css" href="css/skin.css"/>
    <link rel="stylesheet" type="text/css" href="css/container.css"/>
    -->       
}


@{
    ViewBag.Title = "Index";
}

<h2>Login</h2>

<div>
    <h2>Don't want to register?</h2>
    <div id="login-fcbutton">Loading...</div>
</div>

<script type="text/javascript">
    google.friendconnect.renderSignInButton({
        'id': 'login-fcbutton',
        'text': 'Sign in with Google Friend Connect',
        'style': 'long'
    });

    google.friendconnect.container.setParentUrl('/');
    google.friendconnect.container.initOpenSocialApi({
        site: '@ExploreFriendConnect.Conf.ApplicationConfiguration.FriendConnectSiteId',
        onload: function (securityToken) {                        
            if (!window.friendconnect_loaded) {                
                window.friendconnect_loaded = true;
            } else {                
                window.top.location.href = '/';
            }                       
        }
    });    
</script>

